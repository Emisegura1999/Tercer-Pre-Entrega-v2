<div class="container-fluid mt-5 py-5">
  <div class="container px-5 py-3 rounded">
    <h1 class="fs-4 text-uppercase fw-bold text-center">Mi perfil</h1>
    <hr class="mt-3 border border-secondary">
    <form>
      <div class="d-flex gap-5">
        <div class="d-flex align-items-center w-25">
          <p class="fs-5 fw-bold">Foto de perfil</p>
        </div>
        <div class="w-75">
          <div>
            <label for="avatar" style="cursor: pointer;">
              <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" fill="currentColor"
                class="bi bi-pencil" style="cursor: pointer;" viewBox="0 0 16 16">
                <path
                  d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325" />
              </svg>
            </label>
            <input type="file" id="avatar" class="d-none">
          </div>
        </div>
      </div>
      <hr class="mt-3 border border-secondary">
      <div class="d-flex gap-5">
        <div class="d-flex align-items-center w-25">
          <p class="fs-5 fw-bold">Nombre:</p>
        </div>
        <div class="w-75">
          <div>
            <h2 class="fs-5 fw-semibold">{{user.name}}</h2>
          </div>
          </label>
          <input type="file" id="avatar" class="d-none">
        </div>
      </div>
      <hr class="mt-3 border border-secondary">
      <div class="d-flex gap-5">
        <div class="d-flex align-items-center w-25">
          <p class="fs-5 fw-bold">Apellido:</p>
        </div>
        <div class="w-75">
          <div>
            <h2 class="fs-5 fw-semibold">{{user.surName}}</h2>
          </div>
          </label>
          <input type="file" id="avatar" class="d-none">
        </div>
      </div>
      <hr class="mt-3 border border-secondary">
      <div class="d-flex gap-5">
        <div class="d-flex align-items-center w-25">
          <p class="fs-5 fw-bold">Correo electronico:</p>
        </div>
        <div class="w-75">
          <div>
            <h2 class="fs-5 fw-semibold">{{user.email}}</h2>
          </div>
          </label>
          <input type="file" id="avatar" class="d-none">
        </div>
      </div>
      <hr class="mt-3 border border-secondary">
      <div class="d-flex gap-5">
        <div class="d-flex align-items-center w-25">
          <p class="fs-5 fw-bold">Rol:</p>
        </div>
        <div class="w-75">
          <div>
            <h2 class="fs-5 fw-semibold">{{user.rol}}</h2>
          </div>
          </label>
          <input type="file" id="avatar" class="d-none">
        </div>
      </div>
      <hr class="mt-3 border border-secondary">
      <div class="d-flex gap-5">
      </div>
    </form>
    <div class="d-flex align-items-center justify-content-center gap-3 mt-2">
      {{#if this.isAdmin}}
      <a href="/realtimeproducts" class="btn btn-outline-success fw-semibold">
        <svg xmlns="http://www.w3.org/2000/svg" width="22px" height="22px" fill="currentColor" class="bi bi-gear"
          viewBox="0 0 16 16">
          <path
            d="M8 4.754a3.246 3.246 0 1 0 0 6.492 3.246 3.246 0 0 0 0-6.492M5.754 8a2.246 2.246 0 1 1 4.492 0 2.246 2.246 0 0 1-4.492 0" />
